<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    app:cardCornerRadius="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:src="@drawable/admin"
            android:text="Request Details:"
            android:textColor="@color/purple_700"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10sp">

            <EditText
                android:id="@+id/admin_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Admin"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_person_24" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10sp">

            <TextView
                android:id="@+id/admin_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:gravity="start|center"
                android:text="admin@gmail.com"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_email_24" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10sp">

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Location"

                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_edit_location_24" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10sp">

            <EditText
                android:id="@+id/Number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="start|center"
                android:hint="Phone"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_smartphone_24" />


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@color/themecolor"
            android:gravity="center"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.cardview.widget.CardView>